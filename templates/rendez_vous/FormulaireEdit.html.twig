{# templates/rendez_vous/prendre-rendezvous.html.twig #}

{#{% extends 'home/base.html.twig' %}#}

{% block title %}Prendre un rendez-vous{% endblock %}

{% block stylesheets %}
   {# {{ parent() }}#}
    <!-- Boxicons CSS -->
    <link href='https://cdn.jsdelivr.net/npm/boxicons@2.0.5/css/boxicons.min.css' rel='stylesheet'>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <!-- SB Admin 2 CSS -->
    <link href="{{ asset('css/sb-admin-2.min.css') }}" rel="stylesheet">
    <style>
        body {
            background-color: white !important; /* Fond blanc */
        }
    </style>
{% endblock %}

{% block body %}
    <body id="body-pd">
        {#{% include 'home/base.html.twig' %}#}

        <div class="container-fluid" style="padding-top:5rem;">
            {% if app.request.get('action') == 'refuse' %}
                <div class="alert alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <strong>Date !</strong> est occupée, choisissez une autre date.
                </div>
            {% endif %}

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 text-gray-800">Rendez-vous</h1>
            </div>

            <!-- Content Row -->
            <div class="row">
                <!-- Area Chart -->
                <div class="col-xl-12 col-lg-10">
                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">Rendez-vous</h6>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body">
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                <div class="form-group">
                                    {{ form_label(form.NomPatient, 'Nom et prénom du patient') }}
                                    {{ form_widget(form.NomPatient, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.NomPatient.vars.errors %}
                                        <div class="alert alert-danger">{{ error.message }}</div>
                                    {% endfor %}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.NomMedecin, 'Nom du médecin') }}
                                    {{ form_widget(form.NomMedecin, {'attr': {'class': 'form-control', 'novalidate': 'novalidate'}}) }}
                                    {% for error in form.NomMedecin.vars.errors %}
                                        <div class="alert alert-danger">{{ error.message }}</div>
                                    {% endfor %}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.Description, 'Description') }}
                                    {{ form_widget(form.Description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                    {% for error in form.Description.vars.errors %}
                                        <div class="alert alert-danger">{{ error.message }}</div>
                                    {% endfor %}
                                </div>

                                <div class="form-group">
                                    {{ form_label(form.Date, 'Date et heure du rendez-vous') }}
                                    {{ form_widget(form.Date, {'attr': {'class': 'form-control'}}) }}
                                    {% for error in form.Date.vars.errors %}
                                        <div class="alert alert-danger">{{ error.message }}</div>
                                    {% endfor %}
                                </div>

                               
                            {{ form_end(form) }}
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>

        <!-- Main JS -->
        <script src="{{ asset('js/main.js') }}"></script>
    </body>
{% endblock %}

{% block javascripts %}
   {# {{ parent() }}#}
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <!-- Bootstrap JS -->
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}  